{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": false,
    "composite": true,

    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*", "util/**/*", "examples/src/Test.tsx"]
}
